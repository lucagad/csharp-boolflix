<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - BoolFlix</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    
    <link rel="stylesheet" href="~/css/general.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/Header.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/Footer.css" asp-append-version="true"/>
    
    <link rel="stylesheet" href="~/csharp-boolflix.styles.css" />
</head>

<body>

    <header>
        @Html.Partial("../Shared/Partials/_Header")
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        @Html.Partial("../Shared/Partials/_Footer")
    </footer>
        
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>